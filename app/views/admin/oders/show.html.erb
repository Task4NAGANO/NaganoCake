<div class="container">
  <div class="row">
    <div class="col-md-12">
      <table class="table">
          <tr>
            <th>購入者</th>
            <td>
              <%= @order.customer.first_name %><%= @order.customer.last_name %>
            </td>
          </tr>
          <tr>
            <th>注文日</th>
            <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
          </tr>
          <tr>
            <th>配送先</th>
            <td>
              〒<%= @order.postal_code %>
              <%= @order.address %><br>
              <%= @order.name %>
            </td>
          </tr>
          <tr>
            <th>支払方法</th>
            <td><%= @order.payment_method_i18n %></td>
          </tr>
          <tr>
            <%= form_with model: @order, local:true do |f| %>
            <th>
              <%= f.label :status, "注文ステータス" %>
            </th>
            <td>
              <%= f.select :order_status, (Order.order_statuses_i18n ) %>
              <%= f.submit "更新", class: "btn btn-success" %>
            </td>
            <% end %>
          </tr>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col-md-9">
      <table class="order" border="1">
        <thead>
          <tr>
            <th>商品名</th>
            <th>単価(税込)</th>
            <th>数量</th>
            <th>小計</th>
            <th>製作ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @order.order_details.each do |order_detail| %>
          <tr>
            <td><%= order_detail.item.name %></td>
            <td><%= order_detail.item.with_tax_price %></td>
            <td><%= order_detail.amount %></td>
            <td>
              <%= subtotal = order_detail.amount * order_detail.item.with_tax_price  %>
            </td>
            <%#= form_with model: @order_detail, local:true do |f| %>
            <td>
                <%#= f.select :order_status, (OrderDetail.making_status_i18n ) %>
                <%#= f.submit "更新", class: "btn btn-success" %>
            </td>
            <%# end %>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div>
      <table class="price">
        <tr>
          <th>商品合計</th>
          <td>
            <%= @order.total_payment - @order.shipping_cost %>
          </td>
        </tr>
        <tr>
          <th>送料</th>
          <td><%= @order.shipping_cost %></td>
        </tr>
        <tr>
          <th>請求合計金額</th>
          <td><%= @order.total_payment %></td>
        </tr>
      </table>
    </div>
  </div>
</div>