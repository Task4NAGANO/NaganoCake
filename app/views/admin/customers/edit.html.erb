<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-7 col-lg-7 px-5 px-sm-0 mx-auto">
      <h3><%#= @customer.id %>さんの会員情報編集</h3>
      <table class="table_field">
        <tbody>
          <tr>
            <td>会員ID</td>
            <td><%#= @customer.id %></td>
          </tr>
          <tr>
            <td>氏名</td>
            <td><%#= f.text_field :first_name %></td>
            <td><%#= f.text_field :last_name %></td>
          </tr>
          <tr>
            <td>フリガナ</td>
            <td><%#= f.text_field :first_name_kana %></td>
            <td><%#= f.text_field :last_name_kana %></td>
          </tr>
          <tr>
            <td>郵便番号</td>
            <td><%#= f.text_field :postal_code %></td>
          </tr>
          <tr>
            <td>住所</td>
            <td><%#= f.text_field :address %></td>
          </tr>
          <tr>
            <td>電話番号</td>
            <td><%#= f.text_field :telephone_number %></td>
          </tr>
          <tr>
            <td>メールアドレス</td>
            <td><%#= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
          </tr>
          <tr>
            <td>会員ステータス</td>
            <td><%#= @customer.is_deleted %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>