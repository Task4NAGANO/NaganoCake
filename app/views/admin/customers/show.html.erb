<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h3>
        <%= @customer.first_name %><%= @customer.last_name %>さんの
        注文履歴
      </h3>
      <table class="table_field" border="1">
        <thead>
          <tr>
            <th>購入日時</th>
            <th>注文個数</th>
            <th>注文ステータス</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td><%#= @order.created_at.strftime('%Y/%m/%d') %></td>
            <td>
              <%# total = 0 %>
              <%# @order.order_details.each do |order_detail| %>
                <%# total += order_detail.amount %>
              <%# end %>
              <%#= total %>
            </td>
            <td><%#= @order.status %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>