<div class="container">
  <div class="row">
    <div class="mx-auto">
      <%= form_with model: @item, url: admin_items_path do |f| %>
      <h3>商品新規登録</h3>
      <table class="table">
        <tbody>
          <tr>
            <div class="field">
            <td><%= f.label "商品画像" %></td>
            <td><%= f.file_field :image, accept: "image/*" %></td>
            </div>
          </tr>
          <tr>
            <td><%= f.label "商品名" %></td>
            <td><%= f.text_field :name %></td>
          </tr>
          <tr>
            <td><%= f.label "商品説明" %></td>
            <td><%= f.text_area :introduction %></td>
          </tr>
          <tr>
            <td><%= f.label "ジャンル" %></td>
            <td>
              <%= f.select :genre_id,
                options_from_collection_for_select(Genre.all, :id, :name) %>
            </td>
          </tr>
          <tr>
            <td>税込価格</td>
            <td><%= f.text_field :price %></td>
          </tr>
          <tr>
            <td>販売ステータス</td>
            <td>
              <%= f.radio_button :is_active, 0 %>
              <%= f.label :is_active, "販売中" %>

              <%= f.radio_button :is_active, 1 %>
              <%= f.label :is_active, "販売停止中" %>
            </td>
          </tr>
          <tr>
            <td></td>
            <td>
              <%= f.submit "新規登録", class: "btn btn-success" %>
              </td>
          </tr>
        </tbody>
      </table>
      <% end %>
    </div>
  </div>
</div>