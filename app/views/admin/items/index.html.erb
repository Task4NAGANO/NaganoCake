<div class="container">
  <div class="row">
    <div class="col-md-7">
      <h3>商品一覧</h3>
    </div>
    <div class="col-md-5">
      <%= link_to new_admin_item_path do %>
        <i class="fa-sharp fa-solid fa-square-plus"></i>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <table class="table">
        <thead>
          <tr>
            <th>商品ID</th>
            <th>商品名</th>
            <th>税抜価格</th>
            <th>ジャンル</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
        <% @items.each do |item| %>
          <tr>
            <td><%= item.id %></td>
            <td>
              <%= link_to admin_item_path(item.id) do %>
                <%= item.name %>
              <% end %>
            </td>
            <td><%= item.price %></td>
            <td><%= item.genre.name %></td>
            <td>
              <% if item.is_active %>
                販売中
              <% else %>
                販売停止中
              <% end %>
              </td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <%= paginate @items %>
    </div>
  </div>
</div>