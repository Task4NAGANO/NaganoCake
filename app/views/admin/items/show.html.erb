<div class="container">
  <h3>商品詳細</h3>
  <div class="row">
    <div class="col-sm-12 col-md-7 col-lg-7 px-5 px-sm-0 mx-auto">
      <%= image_tag @item.image, size: "300x300" %>
      <table class="table">
        <tbody>
          <tr>
            <td>商品名</td>
            <td><%= @item.name %></td>
          </tr>
          <tr>
            <td>商品説明</td>
            <td><%= @item.introduction %></td>
          </tr>
          <tr>
            <td>ジャンル</td>
            <td></td>
          </tr>
          <tr>
            <td>
              税込価格<br>
              (税抜価格)
            </td>
            <td><%= @item.price %></td>
          </tr>
          <tr>
            <td>販売ステータス</td>
            <td><%#= @item.name %></td>
          </tr>
          <tr>
            <td></td>
            <td><%= link_to "編集する", edit_admin_item_path(@item) %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>