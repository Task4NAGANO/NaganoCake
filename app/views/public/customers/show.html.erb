<div class="container">
  <div class="row">
    <div class="col-md-10">
      <h3>マイページ</h3>
      <p>
        <span>登録情報</span>
        <%= link_to "編集する", edit_customer_path(current_customer), class: "btn btn-success" %>
      </p>
      <table class="mypage" border="1">
        <tbody>
          <tr>
            <td>氏名</td>
            <td>
              <%= current_customer.first_name %>
              <%= current_customer.last_name %>
            </td>
          </tr>
          <tr>
            <td>カナ</td>
            <td>
              <%= current_customer.first_name_kana %>
              <%= current_customer.last_name_kana %>
              </td>
          </tr>
          <tr>
            <td>郵便番号</td>
            <td><%= current_customer.postal_code%></td>
          </tr>
          <tr>
            <td>住所</td>
            <td><%= current_customer.address %></td>
          </tr>
          <tr>
            <td>電話番号</td>
            <td><%= current_customer.telephone_number %></td>
          </tr>
          <tr>
            <td>メールアドレス</td>
            <td><%= current_customer.email %></td>
          </tr>
        </tbody>
      </table>

      <table class="table_field">
        <tbody>
          <tr>
            <td>配送先</td>
            <td><%= link_to "一覧を見る", addresses_path, class: "btn btn-primary" %></td>
          </tr>
          <tr>
            <td><p>注文履歴</td>
            <td><%= link_to "一覧を見る", orders_path, class: "btn btn-primary" %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>