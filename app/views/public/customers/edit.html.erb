<div class="container">
  <div class="row">
    <div class="mx-auto">

<h3>会員情報編集</h3>
<table class="table_field">
  <%= form_with model: @customer do |f| %>
  <tbody>
    <tr>
      <th><%= f.label :"名前" %></th>
      <th><%= f.text_field :first_name %></th>
      <th><%= f.text_field :last_name %></th>
    </tr>
    <tr>
      <th><%= f.label :"カナ" %></th>
      <th><%= f.text_field :first_name_kana %></th>
      <th><%= f.text_field :last_name_kana %></th>
    </tr>
    <tr>
      <th><%= f.label :"郵便番号" %></th>
      <th><%= f.text_field :postal_code %></th>
    </tr>
    <tr>
      <th><%= f.label :"住所" %></th>
      <th><%= f.text_field :address %></th>
    </tr>
    <tr>
      <th><%= f.label :"電話番号" %></th>
      <th><%= f.text_field :telephone_number %></th>
    </tr>
    <tr>
      <th><%= f.label :"メールアドレス" %></th>
      <th><%= f.email_field :email, autofocus: true, autocomplete: "email" %></th>
    </tr>
  </tbody>
</table>
<%= f.submit "編集内容を保存" %>

  <% end %>
    </div>
  </div>
</div>