<div class="container">
  <div class="row">
    <div class="mx-auto">

      <h3 class="title_name">ログイン</h3>


      <div class="table">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <table class="table_field">
          <tbody>
            <tr>
              <td><h5 class="headline">会員の方はこちらからログイン</h5></td>
              <td></td>
            </tr>
            <tr>
              <td><%= f.label :"メールアドレス" %></td>
              <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
            </tr>
            <tr>
              <td><%= f.label :"パスワード" %></td>
              <td><%= f.password_field :password, autocomplete: "current-password" %></td>
            </tr>
            <tr>
              <td></td>
              <td><%= f.submit "ログイン" %></td>
            </tr>
        </tbody>
      <% end %>
      </div>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="mx-auto">
      <div class="headline">
        <h5 class="headline">会員登録がお済みでない方</h5><br>
        <p><%= render "public/shared/links" %>　から新規登録を行なってください</p>
      </div>
    </div>
  </div>
</div>
