<div class="container">
  <div class="row">
      <% if @address.errors.any? %>
        <%= @address.errors.count %>件のエラーが発生しました
        <ul>
          <% @address.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>
    <div class="col-md-12">
      <h3>配送先登録/一覧</h3>
      <%= form_with model: @address do |f| %>
      <table class="table">
        <tbody>
          <tr>
            <td><%= f.label :"郵便番号(ハイフンなし)" %></td>
            <td><%= f.text_field :postal_code %></td>
          </tr>
          <tr>
            <td><%= f.label :"住所" %></td>
            <td><%= f.text_area :address %></td>
          </tr>
          <tr>
            <td><%= f.label :"宛名" %></td>
            <td><%= f.text_field :name %></td>
            <td><%= f.submit "新規登録", class: "btn btn-success" %></td>
          </tr>
        </tbody>
      </table>
      <% end %>
    </div>
  </div>


  <div class="row">
    <div class="col-md-12">
      <table border="1">
        <thead>
          <tr>
            <th>郵便番号</th>
            <th>住所</th>
            <th>宛名</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
        <% @addresses.each do |address| %>
          <tr>
            <td><%= address.postal_code %></td>
            <td><%= address.address %></td>
            <td><%= address.name %></td>
            <td>
              <%= link_to "編集する", edit_address_path(address.id),
                class: "btn btn-success" %>
              <%= link_to "削除する", address_path(address.id), method: :delete,
                "data-confirm" => "本当に削除しますか？",
                  class: "btn btn-danger" %>
            </td>
          <tr>
        <% end %>
        </tbody>
      </table>
      </div>
    </div>
  </div>