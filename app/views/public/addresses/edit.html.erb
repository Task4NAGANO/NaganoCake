<div class="container">
  <div class="row">
  <h3>配送先編集</h3>
    <div class="col-sm-12 col-md-12 col-lg-12 px-5 px-sm-0 mx-auto">
      <%= form_with model: @address do |f| %>
      <table class="table">
        <tbody>
          <tr>
            <td><%= f.label "郵便番号(ハイフンなし)" %></td>
            <td><%= f.text_field :postal_code %></td>
          </tr>
          <tr>
            <td><%= f.label "住所" %></td>
            <td><%= f.text_area :address %></td>
          </tr>
          <tr>
            <td><%= f.label "宛名" %></td>
            <td><%= f.text_field :name %></td>
            <td><%= f.submit "変更内容を保存", class: "btn btn-success" %></td>
          </tr>
        </tbody>
      </table>
      <% end %>
    </div>
  </div>
</div>