<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">

      <%= form_with mdoel: @order do |f| %>

      <p><strong>支払い方法</strong></p>
      <ul>
        <li>クレジットカード</li>
        <li>銀行振込</li>
      </ul>
      <p><strong>お届け先</strong></p>
      <ul>
        <li>ご自身の住所</li>
        <li>登録住所から選択</li>
        <li>
          新しいお届け先
          <table class="table_field">
            <tbody>
              <tr>
                <th>郵便番号(ハイフンなし)</th>
                <th><%= f.text_field :postal_code %></th>
              </tr>
              <tr>
                <th>住所</th>
                <th><%= f.text_field :address %></th>
              </tr>
              <tr>
                <th>宛名</th>
                <th><%= f.text_field :name %></th>
              </tr>
            </tbody>
          </table>
        </li>
      </ul>
       <%= f.submit "確認画面へ進む" %>
      <% end %>
    </div>
  </div>
</div>