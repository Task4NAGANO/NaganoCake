<div class="container">
  <div class="row">
    <div class="mx-auto">
      <h2 class="title_name">新規会員登録</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "public/shared/error_messages", resource: resource %>

    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-md-4">
      <%= f.label :"名前" %><br>

      <%= f.label :"フリガナ" %><br>

      <%= f.label :"メールアドレス" %><br>

      <%= f.label :"郵便番号(ハイフンなし)" %><br>
      <%= f.label :"住所" %><br>
      <%= f.label :"電話番号(ハイフンなし)" %><br>


      <%= f.label :"パスワード" %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> 文字以上)</em>
      <% end %><br>

      <%= f.label :"パスワード(確認用)" %>


    </div>

    <div class="col-md-8">
      <div class="field">
        <%= f.label :"姓" %>
        <%= f.text_field :first_name %>
        <%= f.label :"名" %>
        <%= f.text_field :last_name %>
      </div>
      <div class="field">
        <%= f.label :"セイ" %>
        <%= f.text_field :first_name_kana %>
        <%= f.label :"メイ" %>
        <%= f.text_field :last_name_kana %>
      </div>

      <div class="field">
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="field">
        <%= f.text_field :postal_code %>
      </div>

      <div class="field">
        <%= f.text_field :address %>
      </div>

      <div class="field">
        <%= f.text_field :telephone_number %>
      </div>

      <div class="field">
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>


      <div class="field">
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>

      <div class="actions">
        <%= f.submit "新規登録" %>
      </div>
    <% end %>

    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="mx-auto">
      <h2 class="title_name">既に登録済みの方</h2>
      <p><%= render "public/shared/links" %>　からログインしてください</p>
    </div>
  </div>
</div>
