<div class="container">
    <div class="row">
      <div class="col-sm-12 col-md-7 col-lg-7 px-5 px-sm-0 mx-auto">
      <h4>ショッピングカート</h4>
      <%= button_to "カートを空にする", destroy_all_cart_items_path, method: :delete, class: "btn btn-danger" %>
      <table class="table_field">
        <thead>
          <tr>
            <th>商品名</th>
            <th>単価(税込)</th>
            <th>数量</th>
            <th>小計</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @cart_items.each do |cart_item| %>
          <tr>
            <td><%= cart_item.item.name %></td>
            <td><%= cart_item.item.with_tax_price %></td>
            <td>
              <%= form_with model: cart_item, local:true do |f| %>
                <%= f.select :amount, *[1..10] %>
                <%= f.submit "変更", class: "btn btn-success" %>
              <% end %>
            </td>
            <td><%= cart_item.subtotal %></td>
            <td><%= link_to "削除する", cart_item_path(cart_item.id), method: :delete, class: "btn btn-danger" %></td>
            <% @total += cart_item.subtotal %>
          </tr>
          <% end %>
        </tbody>
      </table>
      <%= link_to "買い物を続ける", items_path, class: "btn btn-primary" %>
      <p>合計金額<%= @total %></p>
      <%= link_to "情報入力へ進む", new_order_path, class: "btn btn-success" %>
    </div>
  </div>
</div>